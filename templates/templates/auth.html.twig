<h3>Auth:</h3>
<ul class="list-none">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li>
            Email:
            {{ app.user.email }}</li>
        <li>
            <a href="{{ path('account') }}" class="underline">Account</a>
        </li>
        <li>
            <a href="{{ path('logout') }}" class="underline">Logout</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('admin') }}" class="underline">Admin Panel</a>
            </li>
        {% endif %}
    {% else %}
        <li>
            <a href="{{ path('login') }}" class="underline">Login</a>
        </li>
        <li>
            <a href="{{ path('register') }}" class="underline">Register</a>
        </li>
    {% endif %}
</ul>
