{% extends 'base.html.twig' %}

{% block subtitle %}Register
{% endblock %}
{% block body %}
    <div class="flex justify-center text-center">
        <form method="post">
            <h3 class="mb-3">Sign up</h3>

            <div class="row">
                <label class="" for="inputEmail">Email</label>
                <input autofocus class="my-1 bg-grey-lighter px-3 py-1 rounded" id="inputEmail" name="email" placeholder="Email" required type="email" value="">
            </div>
            <div class="row">
                <label class="" for="inputPassword">Password</label>
                <input class="my-1 bg-grey-lighter px-3 py-1 rounded" id="inputPassword" name="password" placeholder="Password" required type="password">
            </div>

            <div class="row">
                <label class="" for="inputRepeatPassword">Repeat password</label>
                <input class="my-1 bg-grey-lighter px-3 py-1 rounded" id="inputRepeatPassword" name="repeatPassword" placeholder="Repeat Password" required type="password">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="row">
                <div class="checkbox my-1">
                    <label>
                        <input name="_terms" required type="checkbox">
                        Accept terms
                    </label>
                </div>
            </div>

            <div class="row">
                <button class="bg-blue hover:bg-blue-dark rounded text-teal-lightest font-bold px-3 py-1" type="submit">
                    Sign up
                </button>
            </div>
        </form>
    </div>
{% endblock %}
